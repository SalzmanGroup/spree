<h5><%= variant.sku %> (<%= variant.is_master? ? t(:master) : variant.options_text %>)</h5>
<ul>
<% @supported_currencies.each do |currency| %>
  <li>
    <% price = variant.price_in(currency) %>
    <%= text_field_tag("vp[#{variant.id}][#{currency}]", (price ? price.display_amount : '')) %>
    <%= currency %>
  </li>
<% end %>
</ul>
